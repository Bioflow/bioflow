
<html style="height:100%">
	
<body style="background:white;height:100%;">
		
	





	<div style="background:gray;height:80%;width:960px;margin-left: auto;margin-right: auto;margin-top:40px;border-radius:30px;">
	
		
			<div id="left" style="height:100%;width:300px;float: left">
				
		
		
			<div id="signin" style="padding:20px;margin:20px;border:1px solid black;display:block;width:200px;">
				
				

					<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
					  <%= devise_error_messages! %>
					
					  <div><%= f.label :email %><br />
					  <%= f.email_field :email %></div>
					
					  <div><%= f.submit "Send reset instructions" %></div>
					<% end %>
					
					<%= render "devise/shared/links" %>

					
				 
				
			</div>
		</div>
		
		
		
		<div id="right" style="height:93%;border:1px solid blue;width:600px;float: right;margin:20px;border-radius: 10px;background:#E8E8E8">
			
		</div>
		
